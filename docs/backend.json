{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's complete profile information.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The user's registration ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "personalInfo": {
          "type": "object",
          "properties": {
            "fullName": { "type": "string" },
            "fatherName": { "type": "string" },
            "motherName": { "type": "string" },
            "mobile": { "type": "string" },
            "dob": { "type": "string", "format": "date-time" },
            "gender": { "type": "string", "enum": ["male", "female", "other"] },
            "maritalStatus": { "type": "string", "enum": ["single", "married", "divorced", "widowed"] },
            "religion": { "type": "string" },
            "caste": { "type": "string" },
            "children": { "type": "string" },
            "bloodGroup": { "type": "string" },
            "identificationMark": { "type": "string" },
            "pan": { "type": "string" },
            "aadhaar": { "type": "string" }
          },
          "required": ["fullName", "fatherName", "motherName", "mobile", "dob", "gender", "maritalStatus", "religion", "caste", "pan", "aadhaar"]
        },
        "address": {
          "type": "object",
          "properties": {
            "permanent": { "type": "string" },
            "current": { "type": "string" }
          },
          "required": ["permanent", "current"]
        },
        "bankDetails": {
          "type": "object",
          "properties": {
            "bankName": { "type": "string" },
            "accountNumber": { "type": "string" },
            "ifsc": { "type": "string" },
            "upi": { "type": "string" },
            "bankAddress": { "type": "string" }
          },
          "required": ["bankName", "accountNumber", "ifsc", "bankAddress"]
        },
        "nomineeDetails": {
          "type": "object",
          "properties": {
            "nomineeName": { "type": "string" },
            "nomineeFatherName": { "type": "string" },
            "relationship": { "type": "string" },
            "nomineeMobile": { "type": "string" },
            "nomineeDob": { "type": "string", "format": "date-time" }
          },
          "required": ["nomineeName", "nomineeFatherName", "relationship", "nomineeMobile", "nomineeDob"]
        }
      },
      "required": ["id", "email", "personalInfo", "address", "bankDetails", "nomineeDetails"]
    }
  },
  "auth": {
    "providers": ["email_password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public information for each user."
    }
  }
}
    